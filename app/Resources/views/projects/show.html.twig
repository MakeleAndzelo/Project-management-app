{% extends 'base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('css/show.css') }}">
{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="project-management">
            <small>Manage project:</small>
            <div class="btn-group">
                <a href="{{ path('new_task', {"name": project.name} ) }}"><i class="fa fa-plus"></i></a>
                <a href="{{ path('edit_project', {"name": project.name}) }}"><i class="fa fa-pencil"></i></a>
                <a href="{{ path('delete_project', {"name": project.name}) }}"><i class="fa fa-trash"></i></a>
            </div>
        </div>

        <section class="tasks">
            <ul>
                {% for task in project.tasks %}
                    <li class="task">
                        <a href="{{ path('show_task', {"name": task.name }) }}">{{ task.name }}</a>
                        {% if task.isCompleted %}
                            <small>completed</small>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </section>

    </div>
{% endblock %}

{% block scripts %}
{% endblock %}
